{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "strict": true,
        "skipLibCheck": true,
        "isolatedModules": true,
        "noEmit": true,
        "allowImportingTsExtensions": true
    },
    "include": [
        "**/*.ts"
    ]
}